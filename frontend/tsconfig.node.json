{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true, // default export가 없는 라이브러리 호환성 위함
    "skipLibCheck": true, // node_modules 타입 정의 파일 검사 생략
  },
  "include": ["vite.config.ts", "eslint.config.js"]
}
